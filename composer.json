{
    "name": "aldrumo/admin",
    "description": "The Aldrump Admin Area",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mike Barlow",
            "email": "mike@mikebarlow.co.uk"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "livewire/livewire": "^2.0",
        "blade-ui-kit/blade-heroicons": "^1.3",
        "davidhsianturi/blade-bootstrap-icons": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5",
        "orchestra/testbench": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Aldrumo\\Admin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aldrumo\\Admin\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpunit",
            "./vendor/bin/phpcs --standard=PSR2 src"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aldrumo\\Admin\\Providers\\AdminServiceProvider"
            ]
        }
    }
}
